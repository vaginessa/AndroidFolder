<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/pi4"
    >
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_gravity="right"
        android:weightSum="1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/dd"
            android:background="@drawable/uminho"
            android:layout_weight="0.39"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView2"
            android:textSize="35dp"
            android:textColor="#ffa21618"
            android:layout_alignTop="@+id/signoutbtn"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Sign Up"
            android:id="@+id/signuptv"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textSize="30dp"
            android:textColor="#ffa21618" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="New Username"
            android:id="@+id/signupusernameed"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="#ff000000"
            android:singleLine="true"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/signuptv"
            android:layout_alignLeft="@+id/signuppassworded" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/signuppassworded"
            android:padding="10dp"
            android:hint="Password"
            android:password="true"
            android:textColor="#ff000000"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:phoneNumber="false"
            android:layout_below="@+id/signupusernameed"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/serialnumber"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:hint="Master Key"
            android:textColor="#ff000000"
            android:singleLine="true"
            android:textStyle="italic"
            android:layout_below="@+id/signuppassworded"
            android:layout_alignLeft="@+id/signuppassworded" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/createbtn"
            android:layout_marginTop="23dp"
            android:text="Create"
            android:background="@drawable/custom_button"
            android:layout_below="@+id/serialnumber"
            android:layout_centerHorizontal="true"
            android:textSize="13dp" />

    </LinearLayout>

</LinearLayout>