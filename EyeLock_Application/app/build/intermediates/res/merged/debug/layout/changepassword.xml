<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/pi4"
    >
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_gravity="right"
            android:weightSum="1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/dd"
                android:background="@drawable/uminho"
                android:layout_weight="0.39"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView2"
                android:textSize="35dp"
                android:textColor="#ffa21618"
                android:layout_alignTop="@+id/signoutbtn"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:id="@+id/changepassword"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:textSize="30dp"
                android:textColor="#ffa21618"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/oldpassworded"
                android:padding="10dp"
                android:hint="Old Password"
                android:password="false"
                android:textColor="#ff000000"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:phoneNumber="false"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/newpassworded"
                android:padding="10dp"
                android:hint="New Password"
                android:password="false"
                android:textColor="#ff000000"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:layout_below="@+id/oldpassworded"
                android:layout_centerHorizontal="true" />


            <Button
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:id="@+id/changepwbtn"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button"
                android:text="Connect"
                android:layout_gravity="center_horizontal"
                android:textSize="13dp" />

    </LinearLayout>

</LinearLayout>